{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["react"],
  "globals": {
    "document": 1,
    "window": 1
  },
  "rules": {
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-trailing-spaces": 1,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
